<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
       <item name="actionMenuTextColor">@color/colorBlue</item>


        <!-- To change the popup menu and app text color  -->
        <item name="android:textColor">@color/colorWhite</item>

        <!-- To change the background of options menu-->
        <item name="android:itemBackground">@color/colorCard</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Panel">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>
